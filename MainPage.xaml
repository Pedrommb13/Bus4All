<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bus4All.MainPage"
             Shell.BackgroundColor="#AFC2CD"
             BackgroundColor="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="160"/>
            <RowDefinition Height="160"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Column="0" Grid.Row="1">
            <ImageButton VerticalOptions="Start" Source="seta.png" HeightRequest="120" Clicked="Seta_Clicked"/>
            <Label HorizontalOptions="Center" Text="Linhas" TextColor="Black" FontSize="20" />
        </StackLayout>
        <StackLayout Grid.Column="2" Grid.Row="1">
            <ImageButton VerticalOptions="Start" Source="bus.webp" HeightRequest="120" Clicked="Bus_Clicked"/>
            <Label HorizontalOptions="Center" Text="Paragens" TextColor="Black" FontSize="20"/>
        </StackLayout>
        <StackLayout Grid.Column="1" Grid.Row="2">
            <ImageButton VerticalOptions="Start" Source="sinais.png" HeightRequest="120" Clicked="Sinais_Clicked"/>
            <Label HorizontalOptions="Center" Text="Selecionar Percurso" TextColor="Black" FontSize="20"/>
        </StackLayout>
        <StackLayout Grid.Column="0" Grid.Row="3">
            <ImageButton VerticalOptions="Start" Source="euro.png" HeightRequest="120" Clicked="Euro_Clicked"/>
            <Label HorizontalOptions="Center" Text="Tarifas" TextColor="Black" FontSize="20"/>
        </StackLayout>
        <StackLayout Grid.Column="2" Grid.Row="3">
            <ImageButton VerticalOptions="Start" Source="mappoint.webp" HeightRequest="120" Clicked="Mappoint_Clicked"/>
            <Label HorizontalOptions="Center" Text="Mapa" TextColor="Black" FontSize="20"/>
        </StackLayout>
    </Grid>
</ContentPage>
